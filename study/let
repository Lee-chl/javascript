let x = "global";

if(x==="global"){
    let x = "block-scoped";
    
    console.log(x); //block-scoped
}

//블록 스코프여서 블록을 벗어나면 위에 if에서 사용한 변수를 사용할 수 없다.
console.log(x); // global

// var 경우
var y = "global";
if(y=="global"){
    var y ="block-scoped";
    
    console.log(y); //block-scoped
}
//함수 스코프여서 if에서 사용한 변수를 사용할 수 있다. 
console.log(u); //block-scoped
